<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/header.ejs') %>
  <body>
    <%- include('../partials/nav.ejs') %>
    <h1>Home page</h1>
    <% if(blogs.length > 0) { %> <% blogs.map(blog=> { %>
    <a href="/blogs/<%= blog._id %>">
      <h3 class="heading-3"><%= blog.title %></h3>
      <p><%= blog.snippet%></p>
      <p><%= blog.body%></p>
    </a>
    <% })%> <% } else {%>
    <p>There is not blog available</p>
    <%}%> <%- include('../partials/footer.ejs') %>
  </body>
</html>
